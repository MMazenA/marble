{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25
  },
  "configurePresets": [
    {
      "name": "dev",
      "displayName": "Dev (Ninja + vcpkg)",
      "generator": "Ninja",
      "binaryDir": "build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_STANDARD": "23",
        "BUILD_TESTING": "ON",
        "CMAKE_FIND_PACKAGE_PREFER_CONFIG": "ON",
        "CMAKE_EXE_LINKER_FLAGS": "-Wl",
        "CMAKE_CXX_FLAGS": "-O0",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug (symbols + frame pointers)",
      "generator": "Ninja",
      "binaryDir": "build-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_STANDARD": "23",
        "BUILD_TESTING": "ON",
        "CMAKE_FIND_PACKAGE_PREFER_CONFIG": "ON",
        "CMAKE_EXE_LINKER_FLAGS": "-Wl,-no_warn_duplicate_libraries",
        "CMAKE_CXX_FLAGS": "-O1 -g -fno-omit-frame-pointer -fno-optimize-sibling-calls",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "prod",
      "displayName": "Prod",
      "generator": "Ninja",
      "binaryDir": "build-prod",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_STANDARD": "23",
        "BUILD_TESTING": "OFF",
        "CMAKE_FIND_PACKAGE_PREFER_CONFIG": "ON",
        "CMAKE_EXE_LINKER_FLAGS": "-Wl,-no_warn_duplicate_libraries",
        "CMAKE_CXX_FLAGS": "-O3 -DNDEBUG -march=native -flto",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev",
      "configurePreset": "dev"
    },
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "prod",
      "configurePreset": "prod"
    }
  ],
  "testPresets": [
    {
      "name": "dev",
      "configurePreset": "dev",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "debug",
      "configurePreset": "debug",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
